{
    "name": "hyperpolymath/php-aegis",
    "description": "PHP security and hardening toolkit - input validation, sanitization, XSS prevention, WordPress integration, and IndieWeb protocol security",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "security",
        "validation",
        "sanitization",
        "xss",
        "input-validation",
        "php-security",
        "wordpress",
        "indieweb",
        "micropub",
        "indieauth",
        "webmention",
        "rdf",
        "turtle",
        "semantic-web"
    ],
    "homepage": "https://github.com/hyperpolymath/php-aegis",
    "authors": [
        {
            "name": "Jonathan D.A. Jewell",
            "homepage": "https://github.com/hyperpolymath"
        }
    ],
    "support": {
        "issues": "https://github.com/hyperpolymath/php-aegis/issues",
        "source": "https://github.com/hyperpolymath/php-aegis"
    },
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "PhpAegis\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpAegis\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "analyze": "phpstan analyse src",
        "lint": "php-cs-fixer fix --dry-run --diff",
        "fmt": "php-cs-fixer fix"
    }
}
