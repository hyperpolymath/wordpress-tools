{
    "name": "hyperpolymath/wp-plugin-conflict-mapper",
    "description": "WordPress plugin for detecting and resolving plugin conflicts with security and performance analysis",
    "type": "wordpress-plugin",
    "license": "AGPL-3.0-or-later",
    "authors": [
        {
            "name": "Jonathan",
            "email": "jonathan@hyperpolymath.com",
            "role": "Lead Developer"
        }
    ],
    "keywords": [
        "wordpress",
        "plugin",
        "conflict-detection",
        "security",
        "performance",
        "compatibility"
    ],
    "homepage": "https://github.com/Hyperpolymath/wp-plugin-conflict-mapper",
    "support": {
        "issues": "https://github.com/Hyperpolymath/wp-plugin-conflict-mapper/issues",
        "source": "https://github.com/Hyperpolymath/wp-plugin-conflict-mapper",
        "security": "https://github.com/Hyperpolymath/wp-plugin-conflict-mapper/security"
    },
    "require": {
        "php": ">=8.2",
        "hyperpolymath/php-aegis": "^0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0 || ^11.0",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0",
        "phpstan/phpstan": "^1.10",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "WPCM\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WPCM\\Tests\\": "tests/"
        }
    },
    "suggest": {
        "ext-apcu": "For improved caching performance"
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "lint": "phpcs --standard=WordPress --extensions=php --ignore=*/vendor/*,*/node_modules/* .",
        "lint:fix": "phpcbf --standard=WordPress --extensions=php --ignore=*/vendor/*,*/node_modules/* .",
        "stan": "phpstan analyse --level=5 includes/ admin/ wp-plugin-conflict-mapper.php",
        "security": "phpstan analyse --level=6 includes/class-wpcm-security.php",
        "check": [
            "@lint",
            "@stan",
            "@test"
        ],
        "check:security": [
            "@security",
            "@stan"
        ]
    },
    "scripts-descriptions": {
        "test": "Run PHPUnit tests",
        "test:coverage": "Run tests with coverage report",
        "lint": "Check code against WordPress coding standards",
        "lint:fix": "Automatically fix code style issues",
        "stan": "Run static analysis with PHPStan",
        "security": "Run security-focused static analysis",
        "check": "Run all checks (lint, static analysis, tests)",
        "check:security": "Run security-focused checks"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
